package day06;
class Person{
	String name;
	String id;
	public Person(String name) {
		this.name = name;
	}
	public void eat(String menu) {
		System.out.println(menu + "¸¦ ÁÖ¹®");
	}
	public void run(Person p1) {
		System.out.println(p1.name);
		p1.eat("¼³··ÅÁ");
	}
}
class Student extends Person{
	String grade;
	String department;
	public Student(String name) {
		super(name);
	}
	public void study(int hour) {
		System.out.println("¿À´Ã °øºÎÇÒ ½Ã°£Àº " + hour + "ÀÔ´Ï´Ù.");
	}
}
public class UpcastingEx {
	public static void main(String[] args) {
		Person p = new Student("ÀÌ¼ø½Å");
		Student s ;
		s = (Student)p;
		System.out.println(p.name);
		s.grade = "A";
		s.department = "Com";
		s.eat("ºÀ°ñ·¹");
		s.study(5);
		s.run(s);
	}

}
